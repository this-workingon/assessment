{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": [ "*" ],
      "lib/*": [ "lib/*" ],
      "test/*": [ "test/*" ]
    },
    "lib": [ "dom" ],

    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,

    "types": [
      "node",
      "@wdio/sync",
      "@wdio/mocha-framework",
    ],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
